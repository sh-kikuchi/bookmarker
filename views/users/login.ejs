<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="/static/bootstrap/dist/css/bootstrap.min.css">
  <title>Login</title>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-6 mx-auto">
        <h1 class="text-center">栞</h1>
        <img src="/static/images/fuhin.png" width="100" height="100" class="d-block mx-auto">
        <ul>
          <% if (typeof errors !="undefined" ) { %>
            <% errors.forEach(error=> { %>
              <li>
                <%= error.message %>
              </li>
              <% }) %>
                <% } %>
        </ul>

        <ul>
          <% if(messages.success_msg) { %>
            <li>
              <%= messages.success_msg %>
            </li>
            <% } %>
        </ul>

        <ul>
          <% if (messages.error) { %>
            <li>
              <%= messages.error %>
            </li>
            <% } %>
        </ul>
        <form action="/users/login" method="POST">
          <div class="mb-3 row">
            <div class="col-sm-10 mx-auto">
              <input type="email" id="email" name="email" class="form-control-plaintext pa-2" placeholder="Email" required />
            </div>
          </div>
          <div class="mb-3 row">
            <div class="col-sm-10 mx-auto">
              <input type="password" id="password" name="password" class="form-control-plaintext pa-2" placeholder="Password" required />
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <input type="submit" class="btn btn-success mt-3" value="ログイン" />
          </div>
          <div class="d-flex justify-content-end">
            <a href="/users/register" class="text-secondary">新規の方はこちら</a>
          </div>
        </form>
      </div>
    </div>
  </div>
  <%- include("../_share/footer.ejs") %>
</body>
</html>
